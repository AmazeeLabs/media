  $types['audio'] = new StdClass();
  $types['audio']->machine_name = 'audio';
  $types['audio']->label = "Audio";
  $types['audio']->base = TRUE;
  $types['audio']->view_mode_defaults = array(
    'preview' => 'file_default',
    'original' => 'file_default',

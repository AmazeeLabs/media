    'match_type' => 'all',
    'mimetypes' => array('/^audio/'),
    'extensions' => array('mp3', 'ogg', 'wma'),
    'streams' => array('public', 'private'),
  );

  $types['video'] = new StdClass();
  $types['video']->machine_name = 'video';
  $types['video']->label = "Video";
  $types['video']->base = TRUE;

/**
 *  The 'Default' file style is a fallback when nothing else resolves.
 */
function media_styles_styles_formatter_filter_default() {
  // This is a fallback to handle all generic files.
  return TRUE;
}

function media_styles_styles_formatter_filter($variables) {
  if (isset($variables['object'])) {
    $object = media_load($variables['object']->fid);
    $container = $variables['container'];
    return (in_array(file_uri_scheme($object->uri), $container['data']['streams'])) && (in_array($object->filemime, $container['data']['mimetypes']));
  }
}

/**
 *  Implements hook_styles_presets().
 */
function media_styles_styles_presets() {
  $presets = array(
    'media' => array(
      'square_thumbnail' => array(
        'default' => array('square_thumbnail'),
      ),
      'thumbnail' => array(
        'default' => array('thumbnail'),
      ),
      'large' => array(
        'default' => array('large'),
      ),
      'medium' => array(
        'default' => array('medium'),
      ),
    ),
  );
  foreach (image_styles() as $style_name => $style) {
    $presets['media'][$style_name]['image'] = array($style_name);
  }
  $presets['file'] = $presets['image'] = $presets['media'];
  return $presets;
}

/**
 *  Implements hook_styles_styles().
 */
function media_styles_styles_styles() {
  $styles = array();
  foreach (image_styles() as $style_name => $style) {
    // Save the module & storage for the Image module namespace.
    $style['image_module'] = $style['module'];
    $style['image_storage'] = $style['storage'];
    $styles[$style_name] = $style;
  }
  $default_styles = $styles;
  $all_styles = array(
    'media' => array(
      'containers' => array(
        'image' => array('styles' => $styles),
        'default' => array('styles' => $default_styles),
      ),
    ),
  );
  $all_styles['file'] = $all_styles['image'] = $all_styles['media'];
  return $all_styles;
}


  //@todo: make sure this name isn't claimed
  $field = array(
    'field_name' => 'field_gallery_title',
    'type' => 'text',
    'cardinality' => 1,
    'translatable' => TRUE,
    'locked' => FALSE,
    'storage' => array(
      'type' => 'field_sql_storage',
      'settings' => array(),
    ),
  );
  field_create_field($field);


  // Many of the following values will be defaulted, they're included here as an illustrative examples.
  // @see: http://api.drupal.org/api/function/field_create_instance/7
  $instance = array(
    'field_name' => 'field_gallery_title',
    'object_type' => 'gallery',
    'label' => 'Title',
    'bundle' => 'gallery',
    'description' => 'Title of your gallery or slideshow',
    'required' => TRUE,
    'widget' => array(
      'type' => 'text_textfield',
      'weight' => FIELD_CARDINALITY_UNLIMITED,
    ),
//    'display' => array(
//      'slideshow' => array(
//        'label' => 'hidden',
//        'type' => 'media_large',
//        'settings' => array(),
//        'weight' => -1,
//      ),
//      'thumbnails' => array(
//        'label' => 'hidden',
//        'type' => 'media_preview',
//        'settings' => array(),
//        'weight' => -1,
//      ),
//    ),
  );
  field_create_instance($instance);

  $field = array(
    'field_name' => 'field_gallery_item',
    'type' => 'media',
    'cardinality' => -1,
    'translatable' => TRUE,
    'locked' => FALSE,
    'indexes' => array('fid' => array('fid')),
    'settings' => array(
      'progress_indicator' => 'throbber',
      'allowed_types' => array(),
      'allowed_schemes' => array(),
    ),
    'storage' => array(
      'type' => 'field_sql_storage',
      'settings' => array(),
    ),
  );
  field_create_field($field);


  // Many of the following values will be defaulted, they're included here as an illustrative examples.
  // @see: http://api.drupal.org/api/function/field_create_instance/7
  $instance = array(
    'active' => 1,
    'field_name' => 'field_gallery_item',
    'object_type' => 'gallery',
    'label' => 'Items',
    'bundle' => 'gallery',
    'description' => 'Add media to your gallery',

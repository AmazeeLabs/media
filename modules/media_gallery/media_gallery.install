      'module' => 'media_gallery',
      'settings' => array(
      ),
      'weight' => -1,
    ),
    'display' => array(
      'slideshow' => array(
        'label' => 'hidden',
        'type' => 'media_large',
        'settings' => array(),
        'weight' => -1,
      ),
      'thumbnails' => array(
        'label' => 'hidden',
        'type' => 'media_preview',
        'settings' => array(),
        'weight' => -1,
      ),
    ),
  );
  field_create_instance($instance);
}


/**
 * Implements hook_schema().
 */
function media_gallery_schema() {
  $schema['gallery'] = array(
  'description' => 'Gallery',
    'fields' => array(
      'gid' => array(
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'description' => "Gallery ID",
      ),
      'weight' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
        'description' => "Weight",
      ),
    ),
    'primary key' => array('gid'),
  );

  return $schema;
}